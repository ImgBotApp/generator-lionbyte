{
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "0.1.0",
  "author": {
    "name": "<%= user.name %>",
    "email": "<%= user.email %>"
  },
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "gulp build"<% if (projectType === 'static-site') { %>,
    "build:prod": "gulp build:prod"<% } %>,
    "dev": "gulp",
    "test": "standard && nyc mocha --require babel-register"<% if (projectType === 'static-site') { %>,
    "test:ui": "babel-node test/ui"<% } %>,
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"<% if (projectType === 'static-site') { %>,
      "fixture",
      "test"<% } %>
    ]
  }
}
